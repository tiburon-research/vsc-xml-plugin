{
    "name": "tiburonscripter",
    "displayName": "Tiburon XML Helper",
    "description": "Подсветка синтаксиса, Autocomplete и другие фишки",
    "version": "0.0.5",
    "publisher": "TiburonResearch",
    "author": {
        "name": "GuRu",
        "email": "gulyaev@tiburon-research.ru"
    },
    "bugs": {
        "url": "https://github.com/tiburon-research/vsc-xml-plugin/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tiburon-research/vsc-xml-plugin"
    },
    "icon": "stuff/icon.png",
    "homepage": "https://github.com/tiburon-research/vsc-xml-plugin/README.md",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:tib"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "tib",
                "aliases": [
                    "Tiburon XML script",
                    "tib"
                ],
                "extensions": [
                    "xml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "themes": [
            {
                "label": "Tiburon Dark",
                "path": "./themes/tib-dark.json",
                "uiTheme": "vs-dark"
            }
        ],
        "grammars": [
            {
                "language": "tib",
                "scopeName": "source.tib",
                "path": "./syntaxes/tib.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "tib",
                "path": "./snippets/nodes.json"
            }
        ],
        "commands":[
            {
                "command": "tib.transform.AnswersToItems",
                "title": "Answers -> Items",
                "category": "tib"
            },
            {
                "command": "tib.transform.ItemsToAnswers",
                "title": "Items -> Answers",
                "category": "tib"
            },
            {
                "command": "tib.insertTag",
                "title": "Обернуть текст в тег",
                "category": "tib"
            }
        ],
        "keybindings":[
            {
                "key": "ctrl+alt+t",
                "command": "tib.insertTag"
            }
        ]        
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}